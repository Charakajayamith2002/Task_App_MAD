<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenTwo"
    android:background="@color/bktintlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:fontFamily="sans-serif"
        android:text="@string/welcome_task_minder"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/secondary"
        android:textSize="35sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/image1" />
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif"
        android:text="You're all set to begin your journey with Taskify! Start by creating your first task and experience the power of efficient task management at your fingertips."
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/one_next"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/primary"
        android:layout_height="70dp"/>
    </LinearLayout>
</ScrollView>